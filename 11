#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <time.h>
#include <locale.h>



//Exercicio 11:

//Você é um desenvolvedor de um sistema de segurança e precisa criar um algoritmo que, 
//dado um código de acesso, permita ao usuário entrar em um edifício.
// O algoritmo deve continuar repetindo até que o usuário digite o código de acesso correto.



int main()
{

    
    int codigoAcesso;
    int codigo;


    setlocale(LC_ALL, "portuguese");

    codigo = 1000;
do
{
     printf("Digite ocodigo de acesso: \n");
    scanf("%d", &codigo);
      
        if (codigo == 1000)
        {

            printf("\n Acesso Permitido!");
        }
        else
        {
            printf("Acesso Ngado! \n");
            sleep(2); // comando de tempo, 2 seg
 
        }
} while (codigo != 1000);

   
        return 0;
    
}
