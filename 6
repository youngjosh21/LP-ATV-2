#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <time.h>
#include <locale.h>
// Exercício 6:
//*Considerando um projeto de e-commerce, implemente um programa que solicite ao usuário o código do produto 
//(1 - Camiseta, 2 - Calça, 3 - Sapato). Com base na escolha do usuário, exiba a mensagem informando o produto selecionado e seu preço



int main()
{
    setlocale(LC_ALL, "portuguese");

    int codigo;

    printf("\nBEM VINDO A NOSSA LOJA! O QUE DESEJA COMPRAR?\n");
    printf("\n 1 -  Camiseta  2 - Calça   3 - Sapato");

    printf("\ndigite sua preferência:\n");
    scanf("%d", &codigo);
    system("clear || cls");

fflush (stdin);

    switch (codigo)
    {
    case 1:
        printf("Camiseta - 25,00 R$ !!!");
        break;

    case 2:
        printf("Calça - 30,00R$ !!!");
break;
    case 3:
        printf("Sapato - 35,00R$ !!!");
    default:
        break;
    }
    return 0;
}
